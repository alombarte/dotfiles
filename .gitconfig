[user]
	name = Albert Lombarte
	email = alombarte@gmail.com
[alias]
	s = status
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	contrib = git shortlog --summary
	filelog = log -u
	dc = diff --cached
	# Diff for a revision
	dr = "!f() { git diff "$1"^.."$1"; }; f"
	# Stash operation
	sl = stash list
	sa = stash apply
	ss = stash save
	# Merge in master
	mm = !sh -c 'git checkout master && git merge "$1" && git checkout "$1"' -
	# Delete local and remote branch
	bdel = !git branch -d "$1" && git push origin --delete "$1"
	# List alias
	a = "!git config -l | grep alias | cut -c 7-"
[github]
	user = alombarte
[merge]
	# Write summary of contained commits when merging
	log = true
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore
	editor=vim
