[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	contrib = git shortlog --summary
	filelog = log -u
[github]
	user = alombarte
[merge]
	# Write summary of contained commits when merging
	log = true
[push]
	default = simple
